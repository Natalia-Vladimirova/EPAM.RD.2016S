<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
    <configSections>
        <section name="StartupServices" type="Configurator.CustomSection.StartupServicesConfigSection, Configurator"/>
    </configSections>
    <StartupServices>
      <IdGenerator type="IdGenerator.FibonacciIdGenerator, IdGenerator" />
      <Loader type="UserStorage.Loaders.UserXmlLoader, UserStorage" />
      <Validators>
        <Validator type="UserStorage.Validators.NameValidator, UserStorage" />
      </Validators>
      <Services>
        <Service isMaster="true" serviceType="UserStorage.Services.MasterService, UserStorage" port="1080" />
        <Service serviceType="UserStorage.Services.SlaveService, UserStorage" port="1081" />
        <Service serviceType="UserStorage.Services.SlaveService, UserStorage" port="1082" />
      </Services>
    </StartupServices>
  
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
    <appSettings>
        <add key="fileName" value="userBase.xml" />
    </appSettings>

    <system.diagnostics>
      <trace autoflush="true"/>
      <sources>
        <source name="Source"
                switchName="SourceSwitch"
                switchType="System.Diagnostics.SourceSwitch" >
          <listeners>
            <add name="textwriterListener"
              type="System.Diagnostics.TextWriterTraceListener"
              initializeData="log.txt"
                 traceOutputOptions="ThreadId, ProcessId, DateTime"/>
            <add name="xmlListener"
              type="System.Diagnostics.XmlWriterTraceListener"
              initializeData="log.xml" />
          </listeners>
        </source>
      </sources>
      <switches>
        <add name="Switch" value="1"/>
        <add name="SourceSwitch" value="Information" />
      </switches>
    </system.diagnostics>
  
</configuration>